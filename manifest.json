{
	"name": "Cooldown",
	"version": "1.0",
	"description": "Build an Extension!",
	"manifest_version": 2,
	"permissions": ["tabs", "storage"],
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["src/extension/index.js", "src/extension/popup.js"]
		}
	],
	"background": {
		"persistent": false,
		"scripts": ["src/extension/background.js"]
	},
	"browser_action": {
		"default_popup": "src/extension/popup.html"
	}
}
